<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/slide_layout"
        android:gravity = "bottom"
        app:umanoShadowHeight="4dp"
        app:umanoParallaxOffset="0dp"
        app:umanoOverlay="false"
        app:umanoPanelHeight="0dp"
        tools:context=".fragment.chat.ChatFragment">


        <LinearLayout
            android:id="@+id/baseLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="#eeeeee"
            android:elevation="24dp"
            >

            <ImageButton
                android:id="@+id/btn_plus"
                android:layout_marginRight="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:src="@drawable/icon_plus_white"
                android:background="@drawable/btn_radius"
                android:backgroundTint="@color/main_color"
                android:textColor="@color/white"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:text="전송"
                />

            <EditText
                android:background="@drawable/btn_radius_gray"
                android:id="@+id/edit_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp"
                />

            <ImageButton
                android:id="@+id/btn_send"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:src="@drawable/icon_upward_whitecolor"
                android:background="@drawable/btn_radius"
                android:backgroundTint="@color/main_color"
                android:textColor="@color/white"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:text="전송"
                />


            <!--<Button
                android:id="@+id/btn_send"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/btn_radius"
                android:backgroundTint="@color/main_color"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전송"
                />-->
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:clickable="true"
            android:focusable="false"
            android:orientation="vertical"
            android:id="@+id/dragView"
            >

            <Button
                android:id="@+id/btn_request_passenger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/shape_radius"
                android:backgroundTint="@color/gray_color"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="태워주세요 요청"
                />

            <Button
                android:id="@+id/btn_request_driver"
                android:text="타세요 요청"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/shape_radius"
                android:backgroundTint="@color/main_color"
                android:textSize="16sp"
                android:textStyle="bold"
                />
        </LinearLayout>


    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
</layout>
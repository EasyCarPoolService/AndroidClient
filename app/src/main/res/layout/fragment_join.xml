<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".auth.join.JoinFragment">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/frameLayout"
            >

            <include layout="@layout/join_athenticate_phone"
                android:id="@+id/ath_phone"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            >
            <ImageView
                android:id="@+id/page_indicator01"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat = "@drawable/shape_circle_maincolor"/>

            <ImageView
                android:id="@+id/page_indicator02"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="5dp"
                app:srcCompat = "@drawable/shape_circle_gray"/>
            <ImageView
                android:id="@+id/page_indicator03"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat = "@drawable/shape_circle_gray"/>
        </LinearLayout>

    </LinearLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".navigation.progress.ProgressDetailFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/main_color"
            android:gravity="center"
            android:text="상세내용"
            android:background="@color/white"
            android:elevation="8dp"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:elevation="16dp"
                    android:background="@drawable/shape_radius"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageView_profile"
                        android:layout_margin="16dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/image_profile"
                        android:background="@android:color/transparent"
                        app:civ_border_overlay="true"
                        app:civ_border_width="3dp"
                        app:civ_border_color="#ffffff"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >

                        <TextView
                            android:id="@+id/text_nickname"
                            android:text="NickName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:layout_margin="8dp"
                            android:textStyle="bold"
                            android:textColor="@color/main_color"
                            />

                        <TextView
                            android:id="@+id/text_gender"
                            android:text="성별"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/gray_color"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="평점 : "
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/gray_color"
                            />

                        <RatingBar
                            android:id="@+id/rating_bar_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:progressTint="@color/main_color"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            />

                        <TextView
                            android:id="@+id/text_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(0)"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/gray_color"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:elevation="16dp"
                    android:background="@drawable/shape_radius"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:layout_margin="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:id="@+id/text_departure"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="@color/main_color"
                                android:textStyle="bold"
                                android:text="출발지 : 서울"
                                />

                            <TextView
                                android:id="@+id/text_destination"
                                android:layout_marginTop="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="@color/main_color"
                                android:textStyle="bold"
                                android:text="도착지 : 부산"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/text_date"
                            android:layout_margin="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/main_color"
                            android:textStyle="bold"
                            android:text="날짜 및 시간 : "
                            />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_color"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        />



                    <TextView
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/main_color"
                        android:textStyle="bold"
                        android:text="내용"
                        />

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_message"
                        android:textStyle="bold"
                        android:textColor="@color/main_color"
                        android:textSize="12sp"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_color"
                    android:gravity="center"
                    android:text="평가하시려면 별표를 탭하세요."
                    android:layout_marginTop="8dp"
                    />

                <RatingBar
                    android:id="@+id/rating_bar_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:isIndicator="false"
                    android:progressTint="@color/main_color"
                    />
                    <!--style="@style/Widget.AppCompat.RatingBar.Indicator"-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/text_rate_rating"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_color"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        />

                    <TextView
                        android:text="/5.0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_color"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:background="@color/gray_color"
                    />


                <EditText
                    android:id="@+id/edit_rate_title"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/shape_radius"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:elevation="16sp"
                    android:hint="제목"
                    />

                <EditText
                    android:id="@+id/edit_rate_content"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/shape_radius"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:lines="15"
                    android:elevation="16sp"
                    android:padding="8dp"
                    android:hint="내용"
                    />

                <Button
                    android:id="@+id/btn_progress_complete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_radius_main"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_margin="16dp"
                    android:text="완료 처리하기"
                    />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>